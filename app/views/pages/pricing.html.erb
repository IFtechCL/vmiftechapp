<% content_for :head do %>
  <style>
    footer{
      margin-top: 0px;
    }
    .nodis,.dis{
      display: none;
    }
    .btn.sizes .prices.text{
      padding-top:20px;
      padding-bottom: 20px;
      min-height: 110px;
    }
    .months.active,.months:hover,.months:focus{
      background-color:#3190e7;
    }
  </style>
  <script>
    $(document).ready(function(){
      $("label.onemonth").on("click", function(){
        $("div.prices").hide();
        $("div.nodis").show();
      });
      $("label.threemonth").on("click", function(){
        $("div.prices").hide();
        $("div.dis").show();
      });
      $("label.sixmonth").on("click", function(){
        $("div.prices").hide();
        $("div.maxdis").show();
      });
      $("label.months").on("click",function(){
        $("label.months").removeClass("active");
        $(this).addClass("active");
      });
    });
  </script>
<% end %>
